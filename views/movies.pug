extends layout
block content
  h1 Netflux
  div(class="md-form active-pink active-pink-2 mb-3 mt-0")
    input(class="form-control" type="text" placeholder="Search" aria-label="Search")
  each category in categories
    h2=category.name
    hr
    each movie in movies
      if category.name == movie.category
        a(href=`/api/v1/${movie.id}/`)
          div(class="container")
              img(class="image" src=movie.moviePicture)
              button(class="btn btn-primary")
                span(class="title")=movie.title
              a(class="description")=movie.overview
          
